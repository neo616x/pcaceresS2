<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pcaceresS2.Vistas.vprincipal"
             Title="vprincipal">
    <VerticalStackLayout Spacing="15">
        <Label
            x:Name=" lblUsuario" FontSize="14"
            HorizontalTextAlignment="End"
            TextColor="Red"/>

        <Label 
            Text="Semana 2: Elementos Visuales"
            FontSize="24"
            HorizontalTextAlignment="Center"/>
        <Border Stroke=" black">

            <Picker x:Name=" pkPaises" Title=" Paises">
                <Picker.Items>
                    <x:String>Ecuador</x:String>
                    <x:String>Peru</x:String>
                    <x:String>Colombia</x:String>
                </Picker.Items>
            </Picker>        
        </Border>

        <Label x:Name=" lblSeleccionado"
            TextColor="Black"
            FontSize="16"
            HorizontalTextAlignment="Center"
            Text=" "/>
        
        <Button x:Name=" btnMostrar"
                Text="Mostrar elemento"
                Clicked="btnMostrar_Clicked"/>
        <DatePicker x:Name=" dpfecha" Format="MM/dd/yyyy">
        </DatePicker>

        <Button x:Name="btnFecha" Text="Ver Fecha" 
                Clicked="btnFecha_Clicked"/>

    </VerticalStackLayout>
</ContentPage>